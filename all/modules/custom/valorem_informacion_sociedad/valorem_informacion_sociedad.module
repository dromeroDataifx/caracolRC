/**
 *  function compania_page
 */
 function informacion_sociedad_page() {
 
	$posicionIngles = strpos(request_uri(),'en-gb');
	$idioma = 'es';
    if ($posicionIngles>=0 && is_numeric($posicionIngles) ) {
      $idioma = 'en-gb';
    } else {
	  $idioma = 'es';
    }
	
	
	if($idioma == 'es') {
		$node = node_load(53);  
		$node->title = '';
		return node_view($node);
	} else if($idioma == 'en-gb') {
		$node = node_load(222);  
		$node->title = '';
		return node_view($node);
	}
 
 
   
 }




